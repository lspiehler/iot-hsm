          sopin: sopin,
          pin: pin
          }, function(err, resp) {
          if(err) {
              $('#overlay').fadeOut();
              alert(resp.message);
              //console.log(response);
          } else {
              waitForSlots(function(err, resp) {
                  $('#overlay').fadeOut();
